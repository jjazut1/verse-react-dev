{
  "name": "verse-react",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "npx kill-port 3000 && vite",
    "dev:3000": "npx kill-port 3000 && vite",
    "build": "vite build && node scripts/copy-token-redirect.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "npx kill-port 4173 && vite preview",
    "preview:4173": "npx kill-port 4173 && vite preview",
    "vercel-build": "npm run build",
    "test": "vitest",
    "deploy": "npm run build && firebase deploy",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:template": "cypress run --spec 'cypress/e2e/template-selection/**/*.cy.js'",
    "cy:assignment": "cypress run --spec 'cypress/e2e/assignment-creation/**/*.cy.js'",
    "cy:gameplay": "cypress run --spec 'cypress/e2e/game-play/**/*.cy.js'",
    "cy:basic-tests": "cypress run --spec 'cypress/e2e/**/*.cy.js'",
    "test:e2e": "start-server-and-test dev http://localhost:3000 cy:run",
    "test:template": "start-server-and-test dev http://localhost:3000 cy:template",
    "test:assignment": "start-server-and-test dev http://localhost:3000 cy:assignment",
    "test:gameplay": "start-server-and-test dev http://localhost:3000 cy:gameplay",
    "test:basic": "start-server-and-test dev http://localhost:3000 cy:basic-tests"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.2.4",
    "@chakra-ui/react": "^2.8.2",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "dotenv": "^16.5.0",
    "firebase": "^10.14.1",
    "firebase-admin": "^13.4.0",
    "framer-motion": "^10.18.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-quill": "^2.0.0",
    "react-router-dom": "^7.5.0",
    "slate": "^0.113.0",
    "slate-history": "^0.113.1",
    "slate-react": "^0.113.0",
    "three": "^0.175.0",
    "uuid": "^9.0.1",
    "vite-plugin-pwa": "^1.0.0",
    "workbox-window": "^7.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@testing-library/cypress": "^10.0.3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/react-test-renderer": "^19.1.0",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@types/three": "^0.175.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vitejs/plugin-react": "^4.4.1",
    "cypress": "^14.4.0",
    "depcheck": "^1.4.7",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^16.0.0",
    "jsdom": "^26.1.0",
    "kill-port": "^2.0.1",
    "react-test-renderer": "^18.3.1",
    "start-server-and-test": "^2.0.12",
    "ts-prune": "^0.10.3",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.29.1",
    "vercel": "^41.6.2",
    "vite": "^5.0.12",
    "vitest": "^3.1.1",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
